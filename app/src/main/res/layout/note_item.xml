<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/silver"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="@string/title"
            android:textColor="#142850"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/garis_vw"
            android:layout_width="300dp"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/title_tv"
            style="@style/garis"/>

        <ImageView
            android:id="@+id/desc_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/garis_vw"
            android:contentDescription="TODO"
            android:src="@drawable/ic_desc" />


        <TextView
            android:id="@+id/desk_tv"
            android:layout_width="200dp"
            android:layout_height="16dp"
            android:layout_below="@+id/garis_vw"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/desc_iv"
            android:text="@string/desc"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/ket_cbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toRightOf="@id/garis_vw" />



    </RelativeLayout>






</androidx.cardview.widget.CardView>